<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Google.Protobuf" Version="3.5.1" />
    <PackageReference Include="OptimizedPriorityQueue" Version="4.1.1" />
    <PackageReference Include="UrhoSharp" Version="1.8.65" />
  </ItemGroup>

  <ItemGroup>
    <Compile Update="Storage\GameState.cs">
      <DesignTime>True</DesignTime>
      <AutoGen>True</AutoGen>
      <DependentUpon>GameState.proto</DependentUpon>
    </Compile>
  </ItemGroup>

  <ItemGroup>
    <None Update="Storage\GameState.proto">
      <Generator>ProtobufGenerator</Generator>
      <LastGenOutput>GameState.cs</LastGenOutput>
    </None>
  </ItemGroup>

</Project>
